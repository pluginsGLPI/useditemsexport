<style type="text/css">
    table { border: 1px solid #000000; width: 100%; font-size: 10pt; font-family: helvetica, arial, sans-serif; }
    .signature-table { border-collapse: collapse; }
    .signature-box { border: 1px solid #000000; width: 50%; vertical-align: top; }
</style>

<page backtop="70mm" backleft="10mm" backright="10mm" backbottom="30mm">
    <page_header>
        <table>
            <tr>
                <td style="height: 60mm; width: 40%; text-align: center">
                    <img src="data:image/png;base64,{{ logo_base64 }}" />
                </td>
                <td style="width: 60%; text-align: center;">
                    {{ entity_address|raw }}
                </td>
            </tr>
        </table>
    </page_header>

    <table>
        <tr>
            <td style="border: 1px solid #000000; text-align: center; width: 100%; font-size: 15pt; height: 8mm;">
                {{ __('Asset export ref : ', 'useditemsexport') ~ refnumber }}
            </td>
        </tr>
    </table>

    <br><br><br><br><br>
    <table>
        <tr>
            <th style="width: 25%;">{{ __('Serial number') }}</th>
            <th style="width: 25%;">{{ __('Inventory number') }}</th>
            <th style="width: 25%;">{{ __('Name') }}</th>
            <th style="width: 25%;">{{ __('Type') }}</th>
        </tr>
        {% for item in items %}
            <tr>
                <td style="width: 25%;">{{ item.serial }}</td>
                <td style="width: 25%;">{{ item.otherserial }}</td>
                <td style="width: 25%;">{{ item.name }}</td>
                <td style="width: 25%;">{{ item.type }}</td>
            </tr>
        {% endfor %}
    </table>

    <br><br><br><br><br>
    <table class="signature-table">
        <tr>
            <td style="width: 50%; border-bottom: 1px solid #000000;">
                <strong>{{ author_name }} :</strong>
            </td>
            <td style="width: 50%; border-bottom: 1px solid #000000">
                <strong>{{ user_name }} :</strong>
            </td>
        </tr>
        <tr>
            <td class="signature-box">
                {{ __('Signature', 'useditemsexport') }} : <br><br><br><br><br>
            </td>
            <td class="signature-box">
                {{ __('Signature', 'useditemsexport') }} : <br><br><br><br><br>
            </td>
        </tr>
    </table>

    <page_footer>
        <div style="width: 100%; text-align: center; font-size: 8pt">
            - {{ config.footer_text }} -
        </div>
    </page_footer>
</page>
